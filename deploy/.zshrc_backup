_p10k_toggle_vcs() {
  (( $+functions[p10k] )) || return

  # Перевіряємо, чи шлях містить node_modules або dist
  if [[ "$PWD" =~ '/(node_modules|dist)(/|$)' ]]; then
    p10k display '*/vcs'=hide
  else
    p10k display '*/vcs'=show
  fi
  
  p10k display -r
}

