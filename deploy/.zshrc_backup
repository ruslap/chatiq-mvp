# NVM lazy loading (speeds up shell startup significantly)
export NVM_DIR="$HOME/.nvm"

# Auto-detect default Node.js version and add to PATH
# This makes npm/npx available for subprocesses (e.g., context7) without loading full NVM
if [ -s "$NVM_DIR/alias/default" ]; then
  DEFAULT_NODE_VER=$(cat "$NVM_DIR/alias/default")
  export PATH="$NVM_DIR/versions/node/$DEFAULT_NODE_VER/bin:$PATH"
elif [ -d "$NVM_DIR/versions/node" ]; then
  # Fallback: use latest installed version
  LATEST_NODE=$(ls -v "$NVM_DIR/versions/node" | tail -n 1)
  export PATH="$NVM_DIR/versions/node/$LATEST_NODE/bin:$PATH"
fi

if [ -s "$NVM_DIR/nvm.sh" ]; then
  # Lazy load nvm - only load when needed
  nvm() {
    unset -f nvm node npm npx
    [ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"
    [ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"
    nvm "$@"

    # Update PATH after nvm command (e.g., after 'nvm use')
    if [[ "$1" == "use" || "$1" == "install" ]]; then
      export PATH="$NVM_BIN:$PATH"
    fi
  }
  node() { unset -f nvm node npm npx; [ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"; node "$@"; }
  npm() { unset -f nvm node npm npx; [ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"; npm "$@"; }
  npx() { unset -f nvm node npm npx; [ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"; npx "$@"; }
fi

# bun completions
[ -s "/home/ubuntuvm/.bun/_bun" ] && source "/home/ubuntuvm/.bun/_bun"

# bun
export BUN_INSTALL="$HOME/.bun"
export PATH="$BUN_INSTALL/bin:$PATH"


