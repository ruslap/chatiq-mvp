generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String          @id @default(uuid())
  email          String          @unique
  name           String?
  avatar         String?
  googleId       String?         @unique
  role           UserRole        @default(OPERATOR)
  createdAt      DateTime        @default(now())
  password       String?
  organizationId String?         @unique
  messages       Message[]
  ownedSites     Site[]          @relation("SiteOwner")
  sites          SiteUser[]
  organization   WidgetSettings? @relation(fields: [organizationId], references: [organizationId])
}

model Site {
  id             String          @id @default(cuid())
  ownerId        String
  name           String
  domain         String
  apiKey         String          @unique @default(cuid())
  createdAt      DateTime        @default(now())
  chats          Chat[]
  owner          User            @relation("SiteOwner", fields: [ownerId], references: [id])
  operators      SiteUser[]
  autoReplies    AutoReply[]
  quickTemplates QuickTemplate[]
  businessHours  BusinessHours?
}

model SiteUser {
  siteId String
  userId String
  site   Site   @relation(fields: [siteId], references: [id])
  user   User   @relation(fields: [userId], references: [id])

  @@id([siteId, userId])
}

model Chat {
  id          String    @id @default(uuid())
  siteId      String
  visitorId   String
  visitorName String?
  status      String    @default("open")
  createdAt   DateTime  @default(now())
  site        Site      @relation(fields: [siteId], references: [id])
  messages    Message[]

  @@index([siteId])
}

model Message {
  id         String   @id @default(uuid())
  chatId     String
  from       String
  text       String
  attachment Json?    // Store attachment info as JSON
  userId     String?
  createdAt  DateTime @default(now())
  read       Boolean  @default(false)
  chat       Chat     @relation(fields: [chatId], references: [id])
  user       User?    @relation(fields: [userId], references: [id])

  @@index([chatId])
}

