enum UserRole {
  OWNER
  OPERATOR
}

// Auto-reply rules - automatic messages sent based on triggers
model AutoReply {
  id          String   @id @default(uuid())
  siteId      String
  name        String   // e.g., "Welcome message", "Delay warning"
  trigger     String   // "first_message", "no_reply_5min", "no_reply_10min", "offline"
  message     String   // The auto-reply text
  isActive    Boolean  @default(true)
  delay       Int      @default(0) // Delay in seconds before sending
  order       Int      @default(0) // Order of execution
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  site        Site     @relation(fields: [siteId], references: [id])

  @@index([siteId])
}

// Quick response templates - for operators to quickly insert
model QuickTemplate {
  id          String   @id @default(uuid())
  siteId      String
  title       String   // Short name, e.g., "Greeting", "Phone request"
  shortcut    String?  // Keyboard shortcut, e.g., "/hello", "/phone"
  message     String   // Full message text
  category    String?  // Optional category for grouping
  isActive    Boolean  @default(true)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  site        Site     @relation(fields: [siteId], references: [id])

  @@index([siteId])
}

