generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String          @id @default(uuid())
  email          String          @unique
  name           String?
  avatar         String?
  googleId       String?         @unique
  role           UserRole        @default(OPERATOR)
  createdAt      DateTime        @default(now())
  organizationId String?         @unique
  password       String?
  messages       Message[]
  ownedSites     Site[]          @relation("SiteOwner")
  sites          SiteUser[]
  organization   WidgetSettings? @relation(fields: [organizationId], references: [organizationId])
}

model Site {
  id             String          @id @default(cuid())
  ownerId        String
  name           String
  domain         String
  apiKey         String          @unique @default(cuid())
  createdAt      DateTime        @default(now())
  autoReplies    AutoReply[]
  businessHours  BusinessHours?
  chats          Chat[]
  quickTemplates QuickTemplate[]
  contactLeads   ContactLead[]
  owner          User            @relation("SiteOwner", fields: [ownerId], references: [id])
  operators      SiteUser[]
}

model SiteUser {
  siteId String
  userId String
  site   Site   @relation(fields: [siteId], references: [id])
  user   User   @relation(fields: [userId], references: [id])

  @@id([siteId, userId])
}

model Chat {
  id          String    @id @default(uuid())
  siteId      String
  visitorId   String
  status      String    @default("open")
  createdAt   DateTime  @default(now())
  visitorName String?
  site        Site      @relation(fields: [siteId], references: [id])
  messages    Message[]

  @@index([siteId])
}

model Message {
  id         String   @id @default(uuid())
  chatId     String
  from       String
  text       String
  userId     String?
  createdAt  DateTime @default(now())
  attachment Json?
  read       Boolean  @default(false)
  chat       Chat     @relation(fields: [chatId], references: [id])
  user       User?    @relation(fields: [userId], references: [id])

  @@index([chatId])
}

model WidgetSettings {
  id              String   @id @default(uuid())
  organizationId  String   @unique
  color           String   @default("#6366F1")
  operatorName    String   @default("Support Team")
  operatorAvatar  String?
  welcomeMessage  String   @default("–í—ñ—Ç–∞—é! üëã –ß–∏–º –º–æ–∂—É –¥–æ–ø–æ–º–æ–≥—Ç–∏?")
  showWelcome     Boolean  @default(true)
  position        String   @default("right")
  size            String   @default("standard")
  language        String   @default("uk")
  showContactForm Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  secondaryColor  String   @default("#B6FF00")
  users           User?
}

model AutoReply {
  id        String   @id @default(uuid())
  siteId    String
  name      String
  trigger   String
  message   String
  isActive  Boolean  @default(true)
  delay     Int      @default(0)
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  site      Site     @relation(fields: [siteId], references: [id])

  @@index([siteId])
}

model QuickTemplate {
  id        String   @id @default(uuid())
  siteId    String
  title     String
  shortcut  String?
  message   String
  category  String?
  isActive  Boolean  @default(true)
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  site      Site     @relation(fields: [siteId], references: [id])

  @@index([siteId])
}

