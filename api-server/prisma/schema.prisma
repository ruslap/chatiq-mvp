model ContactLead {
  id        String   @id @default(uuid())
  siteId    String
  name      String
  email     String?
  phone     String?
  message   String?
  createdAt DateTime @default(now())
  site      Site     @relation(fields: [siteId], references: [id])

  @@index([siteId])
}

enum UserRole {
  OWNER
  OPERATOR
}
